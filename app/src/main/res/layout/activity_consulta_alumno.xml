<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fto_1"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="30dp"
        android:text="Inicio de sesion"
        android:textColor="#00BCD4"
        android:textStyle=""
        android:textAlignment="center"
        android:textSize="25sp" />


    <Button
        android:id="@+id/buttonLimpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/buttonGuardar"
        android:layout_marginStart="181dp"
        android:layout_toEndOf="@id/buttonGuardar"
        android:backgroundTint="#00BCD4"
        android:text="Limpiar" />

    <EditText
        android:id="@+id/editTextNombreUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Nombre de usuario"
        android:textAlignment="center"
        android:textColor="#00BCD4"
        android:textColorHint="#00BCD4"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextApellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Apellidos"
        android:textColor="#00BCD4"
        android:textColorHint="#00BCD4"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextContraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Contraseña"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:textColor="#00BCD4"
        android:textColorHint="#00BCD4"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="650dp"
        android:backgroundTint="#00BCD4"
        android:text="Guardar" />



</RelativeLayout>

